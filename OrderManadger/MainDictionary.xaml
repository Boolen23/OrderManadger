<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:OrderManadger"
                    xmlns:conv="clr-namespace:OrderManadger.Converters" x:Class="Empty.cs">
    <conv:StatusToBrushConverter x:Key="StatusToBrush"/>
    <conv:StatusAdapter x:Key="Adapter"/>
    <conv:TextLenghtToVisibility x:Key="TextVisibility"/>
    <DataTemplate x:Key="OrdersTemplate">
        <ListBox ItemsSource="{Binding}" IsSynchronizedWithCurrentItem="True">
            <ListBox.ItemTemplate>
                <ItemContainerTemplate>
                    <StackPanel Orientation="Horizontal" Height="23">
                        <ComboBox IsEditable="True" Width="100" Text="{Binding Seller}" ItemsSource="{Binding Sellers}" Background="Transparent"/>
                        <TextBox Text="{Binding Count}" Background="Transparent" Width="50"/>
                        <ComboBox IsEditable="True" Width="100" Text="{Binding Position}" ItemsSource="{Binding Assortment}"  Background="Transparent"/>
                    </StackPanel>
                </ItemContainerTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DataTemplate>

</ResourceDictionary>